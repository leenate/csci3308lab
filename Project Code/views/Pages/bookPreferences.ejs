<%- include ('../partials/header') %> 
<%- include ('../partials/menu') %>
<link rel="stylesheet" href="/css/style.css" type="text/css">
<main>
  <div class="container-fluid">
    <form style="text-align:center;" method="post" action="/submit_books">
      <div class="col"><%- include ('../partials/message') %></div>
      <div class="page-title" style="width: 40%; margin: auto; margin-bottom: 2%">
            <h4 style="padding-top:5%;">Enter your favorite books' ISBN</h4>
      </div>
      <div class="form-group">
      <input type="text" name="ISBN1" id="books" class="form-control" style="width: 40%; margin: auto;">
      </div>
      <br>
      <input type="text" name="ISBN2" id="books" class="form-control" style="width: 40%; margin: auto;">
      <br>
      <input type="text" name="ISBN3" id="books" class="form-control" style="width: 40%; margin: auto;">
      <br>
      <input type="text" name="ISBN4" id="books" class="form-control" style="width: 40%; margin: auto;">
      <br>
      <input type="text" name="ISBN5" id="books" class="form-control" style="width: 40%; margin: auto;">
      <br>
      <button class="btn btn-success">
        submit 
      </button>
    </form>
    <table class="table">
      <thead>
          <tr>
              <th scope="col">Already Liked Books</th>
          </tr>
      </thead>

      <tbody>
          <% if (typeof results !== 'undefined') { var rows='' ; results.forEach(function(item){ 
              rows += '<tr><td><a>' + item.name + '</a></td><td><img src=' + item.imageloct  + ' style="max-width: 30%;"></td><td><form action="/removeFromPreferences/' + item.isbn + '" method="post"><button type="submit" name="remove_book" class="btn btn-danger" style="float:right">Remove Book</button></form></td></tr>';
            }); %>
            <%- rows %>
          <% } %> 
      </tbody>
    </table>
  </div>
</main>
<%- include ('../partials/footer') %>