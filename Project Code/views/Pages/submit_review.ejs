<%- include ('../partials/header') %>
<%- include ('../partials/menu') %>
<link rel="stylesheet" href="/css/style.css" type="text/css">

<main>
  <div class="container">
    <!-- THE REST OF YOUR HTML CODE GOES HERE -->
    <form action="/submitreview" method="POST">
      
        <h1>Submit a Review</h1>

          <div class="col-auto" >
            <label for="title" >Enter the title of the book: </label>
            <input type="text" name="title" id="title" class="form-control" required>
          </div>

          <div class="col-auto" >
            <label for="review" >Enter your review: </label>
            <input type="text" name="review" id="review" class="form-control" required>
          </div>

          <div class="col-auto" >
            <label for="review" >Rate out of 5 stars: [Input a number 1-5] </label>
            <input type="number" step="1" min="1" max="5" name="star" id="star" class="form-control" required>
          </div>

          <div class="col"><%- include ('../partials/message') %></div>


        <button id="submit_button" class="btn btn-primary" type="submit">Submit Review</button>
        </form>
  </div>
</main>

